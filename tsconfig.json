{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "pretty": true,
        "strictPropertyInitialization": false,
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
